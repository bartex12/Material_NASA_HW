<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/whisper2</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
<!--        <item name="textAppearanceBody1">@style/MyTextStyle</item>-->
<!--        <item name="textAppearanceButton">@style/MyButtonStyle</item>-->

        <!--        свои атрибуты-->
        <item name="colorBottomIcon">?colorPrimary</item>
        <item name="favorite"> @style/ButtonFavoriteStyle</item>
        <item name="favoriteRemove"> @style/ButtonFavoriteStyle</item>
        <item name="bottom_sheet_view_background"> @color/bright_gray</item>
        <item name="bottom_sheet_root_background"> @color/whisper</item>
        <item name="card_background_tint"> @color/whisper2</item>

        <!--        <item name="android:forceDarkAllowed"> true </item>-->
    </style>

    <style name="AppThemePurple" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPurple</item>
        <item name="colorAccent">@color/colorAccentPurple</item>
        <item name="colorOnError">@color/whisper2Purple</item>
    </style>

    <style name="AppThemeBlack" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="colorOnError">@color/whisper2Black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MyTheme">
        <item name="colorOnSurface">#FF0000</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="fontFamily">@font/andika</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/text_field_background</item>
        <item name="fontFamily">@font/andika</item>
    </style>

    <style name="FrameStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WidgetStyle" parent="FrameStyle">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardStyle" parent="WidgetStyle">
        <item name="android:layout_marginStart">@dimen/layout_margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_4dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">@dimen/layout_margin_4dp</item>
        <item name="elevation">@dimen/layout_margin_4dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInputEditTextStyle" parent="WidgetStyle">
        <item name="android:inputType">text</item>
        <item name="android:fontFamily"> @font/andika</item>
    </style>

    <style name="EquilateralImageViewStyle" parent="WidgetStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="WebViewStyle" parent="FrameStyle">
        <item name="android:layout_height">@dimen/web_view_layout_height</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="BottomAppBarStyle" parent="FrameStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?colorAccent</item>
    </style>

    <style name="NavigationViewStyle" parent="WidgetStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_8dp</item>
    </style>

    <style name="BottomSheetRootStyle" parent="FrameStyle">
        <item name="android:background">?bottom_sheet_root_background</item>
    </style>

    <style name="ToolbarStyle" parent="WidgetStyle">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ChipGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipStyle" parent= "Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MyTextStyle</item>
    </style>

    <style name="ChipStyleAction" parent= "Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/MyTextStyle</item>
    </style>

    <style name="TextViewBottomSheetDescriptionStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/tv_paddingStart</item>
        <item name="android:paddingEnd">@dimen/tv_paddingEnd</item>
        <item name="android:fontFamily"> @font/andika</item>
    </style>

    <style name="TextViewBottomSheetHeaderStyle" parent="TextViewBottomSheetDescriptionStyle" >
        <item name="android:layout_marginTop">@dimen/tv_layout_marginTop</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily"> @font/andika</item>

    </style>

    <style name="ViewBottomSheetStyle" >
        <item name="android:layout_width">@dimen/bottom_sheet_view_layout_width</item>
        <item name="android:layout_height">@dimen/bottom_sheet_view_layout_height</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_view_layout_marginTop</item>
        <item name="android:background">?bottom_sheet_view_background</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WikiSearchTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">?attr/colorAccent </item>
    </style>

    <style name="ButtonFavoriteStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="ButtonFavoriteremoveStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeColor">?colorPrimary</item>
    </style>

    <style name="MyTextStyle" >
        <item name="android:fontFamily"> @font/andika</item>
        <item name="android:textSize">@dimen/tv_size_middle</item>
    </style>

    <style name="MyListItemStyle" parent="MyTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimaryDark</item>
    </style>

    <style name="MyTextStyleFavorite" parent="MyTextStyle" >
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="MyButtonStyle" parent="Base.TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/andika</item>
    </style>

</resources>
