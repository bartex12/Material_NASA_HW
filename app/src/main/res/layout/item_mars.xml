<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardStyle"
    android:backgroundTint="?colorOnError">
<!--    ширина match высота wrap -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contaner_earth"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_mars"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/layout_margin_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/bg_mars"/>

        <TextView
            android:id="@+id/tv_mars_date"
            style="@style/MyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_str"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/layout_margin_16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_mars"
            app:layout_constraintStart_toStartOf="@+id/iv_mars"/>
        <TextView
            android:id="@+id/tv_mars_rover"
            style="@style/MyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_str"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/layout_margin_16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_mars"
            app:layout_constraintStart_toEndOf="@id/tv_mars_date"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView >