<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   style="@style/FrameStyle">

    <ProgressBar
        android:id="@+id/progressBarNasa"
        style="@style/ProgressBarStyle"/>

    <androidx.core.widget.NestedScrollView
        style="@style/FrameStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            style="@style/FrameStyle"
            android:paddingStart="@dimen/cl_paddingStart"
            android:paddingEnd="@dimen/cl_paddingEnd">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout"
                style="@style/TextInputLayoutStyle"
                android:hint="@string/search_wiki"
                android:visibility="gone"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:endIconCheckable="true"
                app:endIconDrawable="@drawable/ic_wikipedia"
                app:endIconMode="custom"
                app:helperText="@string/wiki_helper_text"
                app:layout_constraintBottom_toTopOf="@+id/chipGroupMain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:boxCornerRadiusTopStart="@dimen/boxCornerRadiusTopStart"
                app:boxCornerRadiusBottomEnd="@dimen/boxCornerRadiusBottomEnd">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_edit_text"
                    style="@style/TextInputEditTextStyle"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupMain"
                style="@style/ChipGroupStyle"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1"
                    style="@style/ChipStyle"
                    android:text="@string/today" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    style="@style/ChipStyle"
                    android:text="@string/yesterday" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    style="@style/ChipStyle"
                    android:text="@string/before_yesterday" />
            </com.google.android.material.chip.ChipGroup>

            <geekbarains.material.util.EquilateralImageView
                android:id="@+id/image_view"
                style="@style/EquilateralImageViewStyle"
                android:contentDescription="@string/photo_of_the_day_stub"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupMain"
                app:srcCompat="@drawable/ic_no_photo_vector" />

            <WebView
                android:id="@+id/web_view"
                style="@style/WebViewStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupMain"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

<!--    BottomSheet  -->
    <include layout="@layout/bottom_sheet_layout" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemIconTint = "@color/btn_color_selector"
        app:itemTextColor= "@color/btn_color_selector"
        app:menu="@menu/menu_bottom_navigation_picture"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

